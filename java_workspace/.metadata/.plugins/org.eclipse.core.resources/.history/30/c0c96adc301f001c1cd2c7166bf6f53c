	private static String getMax_Min(int[] integer) {
		 int max = integer[0];
		 int min = max ;
		 String print="";
 		 for (int i = 0 ; i < integer.length; i++) {
 			 max = max < integer[i] ? integer[i] : max;
 			 min = min > integer[i] ? integer[i] : min;
 			 
 		print ="max = "+max +"  min = "+ min ;			 
 			 
 		}

		
		return print;
	}
 

	
	
	
	
	
	
	
	
